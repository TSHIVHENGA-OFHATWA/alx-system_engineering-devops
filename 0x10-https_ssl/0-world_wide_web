#!/usr/bin/env bash
# Display information about subdomains for a given domain.

DOMAIN=$1
SUBDOMAIN=$2

if [ $# -eq 1 ]
then
    res="www.$DOMAIN lb-01.$SUBDOMAIN web-01.$DOMAIN web-02.$SUBDOMAIN"
else
    res="$SUBDOMAIN.$DOMAIN"
fi

dig $res | awk '/ANSWER SECTION:/{getline; split($DOMAIN,b,"."); print "The subdomain", b[1], "is a", $4, "record and points to", $5}'
