#!/usr/bin/env bash
# Configures a new Ubuntu machine by installing Nginx
# and setting it up to serve a "Hello World" page.

#Updating package lists and installing Nginx...
sudo apt-get update && sudo apt-get install nginx -y

#Starting Nginx service...
sudo service nginx start

#Allowing Nginx through the firewall...
sudo ufw allow 'Nginx HTTP'

#Setting up ownership and permissions for web files...
sudo chown -R "$USER":"$USER" /var/www/html
sudo chmod -R 755 /var/www

#Creating new index page with 'Hello World!' message..."
echo -e "Hello World!" | dd status=none of=/var/www/html/index.nginx-debian.html

#Restarting Nginx to apply changes...
sudo serive nginx restart 

echo "Configuration completed successfully. âœ…"
